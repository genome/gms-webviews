<div class="container-fluid">

  <div class="row-fluid">

    <div class="span2">
      <dl>
        <dt>status</dt><dd><%= @build.master_event.event_status %></dd>

        <dt>user</dt>
        <dd><%= @build.model.user_name %></dd>

        <dt>model</dt>
        <dd><%= link_span(@build.model_id, model_path(@build.model)) %></dd>

        <dt>subject</dt>
        <dd><%= link_span(@build.model.subject_id, subject_path(@build.model.subject)) %></dd>

        <dt>files</td>
      <dd>
        <%= link_span('data', "http://gscweb.gsc.wustl.edu#{@build.data_directory}")  %>
        <%= link_span('errors', "http://gscweb.gsc.wustl.edu#{@build.data_directory}/logs/#{@build.master_event.id}.err")  %>
        <%= link_span('output', "http://gscweb.gsc.wustl.edu#{@build.data_directory}/logs/#{@build.master_event.id}.out")  %>
      </dd>
    </dl>
  </div>

  <div class="span10">
    <dl>
      <dt>software</dt>
      <dd><%= @build.software_revision %></dd>

      <dt>processing profile</dt>
      <dd>
      <%= link_span(@build.model.processing_profile.id, processing_profile_path(@build.model.processing_profile))  %>
      <%= @build.model.processing_profile.name %>
      </dd>

      <dt>workflow</dt><dd>-</dd>

      <dt>LSF job id</dt>
      <dd><%= @build.master_event.lsf_job_id %></dd>
    </dl>
  </div>

  </div> <!-- row-fluid -->
</div> <!-- container-fluid -->


