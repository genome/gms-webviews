!!! 5
%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title
      Genome Modeling System 
    =stylesheet_link_tag "application", media: "all"
    =javascript_include_tag "application"
    =csrf_meta_tags

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{class: "brand", href: "/search"}
            =image_tag "gc_logo_white_shadow.png"
            Genome Modeling System 
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{:href=>"#", :data=>{:toggle=>'dropdown'}}
                =@current_user.username
                %b.caret
              %ul.dropdown-menu
                %a{:href=>"#"} Placeholder
          %form{class: "navbar-search pull-right", action: "/search"}
            %input{type:"text", name: "q", class: "search-query span2", placeholder: "Search"}
          
    .container
      - flash.each do |key, val|
        = content_tag :div, (content_tag :h3, val), class: "alert alert-#{key}"
      .row
        .span12
          =yield

      %hr
      %footer
          

